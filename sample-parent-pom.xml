        <exec-maven-plugin.version>1.2.1</exec-maven-plugin.version>
        <hamcrest.version>1.3</hamcrest.version>
        <pwc.release.dist.url>http://maven.pwc.com/content/repositories/pwc_releases</pwc.release.dist.url>
        <pwc.snapshot.dist.url>http://maven.pwc.com/content/repositories/pwc_snapshot</pwc.snapshot.dist.url>
        <jackson.json.version>2.9.7</jackson.json.version>
